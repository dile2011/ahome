    // 不常规
    ABlurMenu *addMemberMesh = [[ABlurMenu alloc]initWithTitle:@"" menuImage:@"home_menu_addperson.png" andColor:[UIColor colorWithRed:59./255. green:71./255 blue:87/255. alpha:.5] andSelect:^{
        [self addMember];
    }];
    
